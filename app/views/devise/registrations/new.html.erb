<div class="flex justify-center items-center min-h-screen">

  <div class="md:flex bg-sky-100 p-14 rounded-lg shadow-md justify-center">
    <div class="w-full flex justify-center items-center p-4 md:mr-6 md:mb-0 mb-6">
      <h1 class="text-5xl whitespace-nowrap subpixel-antialiased font-semibold">Welcome :D</h1>
    </div>

    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="flex flex-col mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input border-2 border-black rounded-lg p-2", placeholder: "Email" %>
        </div>

        <div class="flex flex-col mb-4">
          <%= f.password_field :password, autocomplete: "new-password", class: "input border-2 border-black rounded-lg p-2", placeholder: "Password" %>
        </div>

        <div class="flex flex-col mb-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input border-2 border-black rounded-lg p-2", placeholder: "Confirm Password" %>
        </div>

        <div class="actions flex justify-center">
          <%= f.submit "Sign up", class: "button bg-black text-white py-2 px-4 w-full rounded-lg" %>
        </div>
      <% end %>

      <div class="mt-4 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>
