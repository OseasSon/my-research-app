<div class="flex justify-center items-center min-h-screen">

  <div class="md:flex bg-sky-100 p-16 rounded-lg shadow-md justify-center">
    <div class="w-full flex justify-center items-center p-4 md:mr-6 md:mb-0 mb-6">
      <h1 class="text-5xl whitespace-nowrap subpixel-antialiased font-semibold">Welcome :)</h1>
    </div>

    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
        <div class="flex flex-col mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full input border-2 border-black rounded-lg p-2", placeholder: "Email" %>
        </div>

        <div class="flex flex-col mb-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "input border-2 border-black rounded-lg p-2", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center mb-4 justify-center text-sm">
            <%= f.check_box :remember_me, class: "mr-2" %>
            <label for="remember_me">Remember me</label>
          </div>
        <% end %>

        <div class="actions flex justify-center">
          <%= f.submit "Log in", class: "button bg-black text-white py-2 px-4 w-full rounded-lg" %>
        </div>
      <% end %>

      <div class="mt-4 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>
