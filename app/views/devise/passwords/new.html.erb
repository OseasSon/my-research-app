<div class="flex flex-col justify-center items-center min-h-screen">

  <div class="bg-sky-100 p-10 rounded-lg shadow-md flex justify-center">

    <div class="w-full">
      <div class="flex justify-center items-center p-5">
        <h1 class="text-2xl subpixel-antialiased font-semibold">Forgot your password?</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "w-full max-w-md space-y-4") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="flex flex-col mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input border-2 border-black rounded-lg p-2", placeholder: "Email" %>
        </div>

        <div class="actions flex justify-center">
          <%= f.submit "Send me reset password instructions", class: "button bg-black text-white py-2 px-4 w-full rounded-lg" %>
        </div>
      <% end %>

      <div class="mt-4 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>
